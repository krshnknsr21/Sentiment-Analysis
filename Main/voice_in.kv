<Voice_in@Screen>:
    id: 'voice_screen'
    canvas:
        Color:
            rgb: (1,0,0,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: 100, 200, 400, 100

    FloatLayout:
        Button:
            text: 'Start Record'
            size_hint: .2, .2
            pos_hint: {'center_x': .5, 'center_y': .7}
