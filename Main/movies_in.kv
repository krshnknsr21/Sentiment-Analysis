<Movies_in@Screen>:
    id: movie_screen
    Label:
        id: movies_in_label
        gid: 'movies_in_label'
        text: 'Output'
        on_pos: app.register_widget(self)
        pos_hint:{"center_x": .5, 'center_y': .3}
        size_hint: .5, .1
        # canvas:
        #     Color:
        #         rgb: (1,1,1,1)
        #     Rectangle:
        #         size: self.size
        #         pos: self.pos

    Button:
        id: select_movie
        text: 'Select Movie'
        on_parent: self.parent.ids.dropdown.dismiss()
        on_release: dropdown.open(self)
        size_hint: .8, .1
        pos_hint:  {"center_x": .5, "center_y": .7}

        DropDown:
            id: dropdown
            on_select: select_movie.text = '{}'.format(args[1])

            Button:
                text: 'Joker'
                size_hint_y: None
                height: '50dp'
                on_release: dropdown.select('Joker')
                on_release: root.ids.movies_in_label.text = 'Joker'

            Button:
                text: 'The Shawshank Redemption'
                size_hint_y: None
                height: '50dp'
                on_release: dropdown.select('The Shawshank Redemption')

            Button:
