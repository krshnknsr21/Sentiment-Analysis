<Movies_in@RelativeLayout>:
    id: movie_screen
    canvas.before:
        Color:
            rgb: (160/255,160/255,160/255,1)
        BorderImage:
            source: 'Images/movies.jpg'
            pos: self.pos
            size: self.size
    Label:
        id: movies_in_label
        text: 'Output'
        pos_hint:{"center_x": .5, 'center_y': .3}
        size_hint: .5, .1

    # Label:
    #     id: pie_chart
    #     canvas:
    #         Color:
    #             rgb: 1, 1, 1
    #         Ellipse:
    #             pos: 100, 160
    #             size: 200, 200
    #             source: 'Images/mic.png'
    #             angle_start: 0#app.input_angle_start()
    #             angle_end: 360#app.input_angle_end()

    Button:
        id: select_movie
        text: 'Select Movie'
        on_parent: self.parent.ids.dropdown.dismiss()
        on_release: dropdown.open(self)
        size_hint: .8, .1
        pos_hint:  {"center_x": .5, "center_y": .9}

        DropDown:
            id: dropdown
            on_select: select_movie.text = '{}'.format(args[1])

            Button:
                text: 'Joker'
                size_hint_y: None
                height: '50dp'
                on_release: dropdown.select('Joker')
                on_press: app.process_movies_in('Joker')

            Button:
                text: 'The Shawshank Redemption'
                size_hint_y: None
                height: '50dp'
                on_release: dropdown.select('The Shawshank Redemption')
                on_press: app.process_movies_in('The Shawshank Redemption')

            Button:
