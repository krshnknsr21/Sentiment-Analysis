#:set end_val 0
<Movies_in@FloatLayout>:
    id: movie_screen
    canvas.before:
        Color:
            rgb: (160/255,160/255,160/255,1)
        BorderImage:
            source: 'Images/movies.jpg'
            pos: self.pos
            size: self.size

    
    Label:
        id: movies_in_label
        text: 'Output'
        pos_hint:{"center_x": .5, 'center_y': .3}
        size_hint: .5, .1

    CustomLabel:
        id: pie_chart_pos
        #text: '50'
        foreground_color: (0,0,0,0)
        canvas:
            Color:
                rgb: (0, 1, 0, 1)
            Ellipse:
                id: ellipsee
                pos: 100, 160
                size: 200, 200
                angle_start: 0
                angle_end: self.end_value
    
    CustomLabel:
        id: pie_chart_neg
        #text: '50'
        foreground_color: (0,0,0,0)
        canvas:
            Color:
                rgb: (1, 0, 0, 1)
            Ellipse:
                id: ellipsee
                pos: 100, 160
                size: 200, 200
                angle_start: self.start_value
                angle_end: self.end_value

    CustomLabel:
        id: pie_chart_nu
        #text: '50'
        foreground_color: (0,0,0,0)
        canvas:
            Color:
                rgb: (0.5, 0.5, 0.5, 1)
            Ellipse:
                id: ellipsee
                pos: 100, 160
                size: 200, 200
                angle_start: self.def_value
                angle_end: 360


    Button:
        id: select_movie
        text: 'Select Movie'
        on_parent: dropdown.dismiss()
        on_release: dropdown.open(self)
        size_hint: .8, .1
        pos_hint:  {"center_x": .5, "center_y": .9}

        DropDown:
            id: dropdown
            on_select: select_movie.text = '{}'.format(args[1])

            Button:
                text: 'Joker'
                size_hint_y: None
                height: '50dp'
                on_release: dropdown.select('Joker')
                on_press: app.process_movies_in('Joker')

            Button:
                text: 'The Shawshank Redemption'
                size_hint_y: None
                height: '50dp'
                on_release: dropdown.select('The Shawshank Redemption')
                on_press: app.process_movies_in('The Shawshank Redemption')

            Button:
                text: 'The Dark Knight'
