<Movies_in@RelativeLayout>:
    dropdown: dropdown.__self__
    id: movie_screen
    canvas.before:
        Color:
            rgb: (160/255,160/255,160/255,1)
        BorderImage:
            source: 'Images/blue.png'
            pos: self.pos
            size: self.size

    Label:
        id: review_legend_pos
        text: ''
        pos_hint:{"center_x": .65, 'center_y': .70}
        font_size: 20
        halign: 'center'
        color: 0,1,0,1

    Label:
        id: review_legend_neg
        text: ''
        pos_hint:{"center_x": .65, 'center_y': .55}
        font_size: 20
        halign: 'center'
        color: 1,0,0,1

    Label:
        id: review_legend_neu
        text: ''
        pos_hint:{"center_x": .65, 'center_y': .40}
        font_size: 20
        halign: 'center'
        color: 0.5,0.5,0.5,1

    Label:
        id: movies_in_label
        text: 'Output'
        pos_hint:{"center_x": .5, 'center_y': .15}
        size_hint: .5, .1
        font_size: 30

    CustomLabel:
        id: pie_chart_pos
        foreground_color: (0,0,0,0)
        canvas:
            Color:
                rgb: (0, 1, 0, 1)
            Ellipse:
                id: ellipsee
                pos: 100, 160
                size: 200, 200
                angle_start: self.start_value
                angle_end: self.end_value

    CustomLabel:
        id: pie_chart_neg
        pos_hint: {"center_x": .5, 'center_y': .5}
        foreground_color: (0,0,0,0)
        canvas:
            Color:
                rgb: (1, 0, 0, 1)
            Ellipse:
                id: ellipsee
                pos: 100, 160
                size: 200, 200
                angle_start: self.start_value
                angle_end: self.end_value

    CustomLabel:
        id: pie_chart_nu
        foreground_color: (0,0,0,0)
        canvas:
            Color:
                rgb: (0.5, 0.5, 0.5, 1)
            Ellipse:
                id: ellipsee
                pos: 100, 160
                size: 200, 200
                angle_start: self.start_value
                angle_end: self.end_value

