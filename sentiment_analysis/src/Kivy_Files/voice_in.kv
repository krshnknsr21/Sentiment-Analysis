#:import utils kivy.utils
#utils.get_color_from_hex('')
<Voice_in@RelativeLayout>:
    id: voice_screen
    canvas.before:
        Color:
            rgb: (160/255,160/255,160/255,1)
        BorderImage:
            source: 'Images/blue.png'
            pos: self.pos
            size: self.size

    MDFillRoundFlatIconButton:
        icon: 'record-circle'
        text: 'Record'
        size_hint: .25, .1
        pos_hint: {'center_x': .5, 'center_y': .7}
        md_bg_color: 1,0,0,1
        on_release: app.process_voice_in()
        theme_text_color: 'Secondary'
        text_color: 1,1,1,1
        font_size: 30

    Label:
        id: voice_in_label_text
        text: 'Press the button to record Audio'
        pos_hint:{"center_x": .5, 'center_y': .4}
        size_hint: .5, .2
        font_size: 30
        halign: 'center'
        color: 0,0,0,1

    ShadowLabel:
        id: voice_in_label_analysis
        text: ''
        decal: 2, -2
        tint: 0, 0, 0, .15
        pos_hint:{"center_x": .5, 'center_y': .25}
        size_hint: .5, .2
        font_size: 40
        halign: 'center'

<ShadowLabel>:
    canvas.before:
        Color:
            rgba: root.tint

        Rectangle:
            pos:
                int(self.center_x - self.texture_size[0] / 2.) + root.decal[0],\
                int(self.center_y - self.texture_size[1] / 1.95) + root.decal[1]

            size: root.texture_size
            texture: root.texture
