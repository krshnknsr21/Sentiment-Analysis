#:import utils kivy.utils
#utils.get_color_from_hex('')
BoxLayout:
    orientation: 'vertical'

    MDToolbar:
        id: toolbar
        title: "Sentiment Analysis"
        specific_text_color: 1,1,1,1

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: 'screen 1'
            #text: "Text Input"
            icon: 'text'

            Text_in:
                id: text_screen

        MDBottomNavigationItem:
            name: 'screen 2'
            #text: "Movie Reviews"
            icon: 'movie'

            Movies_in:
                id: movie_screen

        MDBottomNavigationItem:
            name: 'screen 3'
            #text: "Voice Input"
            icon: 'microphone'

            Voice_in:
                id: voice_screen
